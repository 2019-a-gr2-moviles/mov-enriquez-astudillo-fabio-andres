<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/login_ly">
    <Button
            android:text="@string/ingresar"
            android:layout_width="236dp"
            android:layout_height="48dp"
            android:id="@+id/login_btn_ingresar" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp" app:layout_constraintHorizontal_bias="0.517"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:background="@color/colorPrimary"
            android:textColor="@color/white"/>
    <TextView
            android:text="@string/nombreClinica"
            android:layout_width="315dp"
            android:layout_height="114dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="200dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/login_btn_ingresar" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp" android:textColor="@color/black" android:textSize="40sp"
            android:gravity="center" android:fontFamily="@font/roboto_medium"/>
</android.support.constraint.ConstraintLayout>