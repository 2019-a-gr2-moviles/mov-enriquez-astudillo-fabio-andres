<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/ly_main">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="359dp"
            android:layout_height="104dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ly_buttom"
            android:gravity="bottom">
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageButton2" android:layout_weight="1"
                android:src="@drawable/for_you"
                android:scaleType="fitXY"
                android:background="@color/colorPrimary"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageButton4" android:layout_weight="1" android:background="@color/colorPrimary"
                android:src="@drawable/headlines"
                android:scaleType="fitXY"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageButton3" android:layout_weight="1"
                android:src="@drawable/favorites"
                android:scaleType="fitXY" android:background="@color/colorPrimary"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageButton" android:layout_weight="1"
                android:src="@drawable/newstand"
                android:scaleType="fitXY" android:background="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="369dp"
            android:layout_height="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout" android:layout_marginEnd="8dp">
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageButton5" android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:src="@drawable/search"
                android:scaleType="fitXY"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageButton7" android:layout_weight="1"
                android:src="@drawable/google_news"
                android:scaleType="fitXY" android:background="@color/colorPrimary"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageButton6" android:layout_weight="1"
                android:src="@drawable/user"
                android:scaleType="fitXY" android:background="@color/colorPrimary"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="493dp"
            android:id="@+id/rv_main"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ly_buttom"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
</android.support.constraint.ConstraintLayout>