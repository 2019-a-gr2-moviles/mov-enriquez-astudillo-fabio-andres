<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearLibros">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input2_isbn" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/input_nombre" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/input_nombre" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/input_numPag"
            app:layout_constraintEnd_toEndOf="@+id/input2_isbn" app:layout_constraintStart_toStartOf="@+id/input2_isbn"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_numPag" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/input_edicion"
            app:layout_constraintEnd_toEndOf="@+id/input_nombre" app:layout_constraintStart_toStartOf="@+id/input_nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_edicion" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/input_fecha"
            app:layout_constraintEnd_toEndOf="@+id/input_numPag" app:layout_constraintStart_toStartOf="@+id/input_numPag"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/input_fecha" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/input2_editorial"
            app:layout_constraintEnd_toEndOf="@+id/input_edicion" app:layout_constraintStart_toStartOf="@+id/input_edicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/input2_editorial" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_crearLibro"
            app:layout_constraintEnd_toEndOf="@+id/input_fecha" app:layout_constraintStart_toStartOf="@+id/input_fecha"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_crearLibro" app:layout_constraintEnd_toEndOf="@+id/input2_editorial"
            app:layout_constraintStart_toStartOf="@+id/input2_editorial" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>