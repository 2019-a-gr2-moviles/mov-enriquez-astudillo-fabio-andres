<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Autores">

    <Button
            android:text="@string/ListaAutores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_gestionar_autor"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/btn_crear_autor" android:layout_marginBottom="84dp"/>
    <Button
            android:text="@string/CrearAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_crear_autor" app:layout_constraintStart_toStartOf="@+id/btn_gestionar_autor"
            app:layout_constraintEnd_toEndOf="@+id/btn_gestionar_autor" android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.473"
    />
</android.support.constraint.ConstraintLayout>