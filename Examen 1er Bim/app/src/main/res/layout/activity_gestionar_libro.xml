<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GestionarLibro">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input2_isbn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/input2_nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/input2_nombre"
            app:layout_constraintEnd_toEndOf="@+id/input2_isbn" app:layout_constraintStart_toStartOf="@+id/input2_isbn"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/input2_pags"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input2_pags"
            app:layout_constraintStart_toStartOf="@+id/input2_nombre" app:layout_constraintEnd_toEndOf="@+id/input2_nombre"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/input2_edicion"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input2_edicion"
            app:layout_constraintStart_toStartOf="@+id/input2_pags" app:layout_constraintEnd_toEndOf="@+id/input2_pags"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/input2_fecha"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/input2_fecha"
            app:layout_constraintStart_toStartOf="@+id/input2_edicion" app:layout_constraintEnd_toEndOf="@+id/input2_edicion"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/input2_editorial"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/input2_editorial"
            app:layout_constraintStart_toStartOf="@+id/input2_fecha" app:layout_constraintEnd_toEndOf="@+id/input2_fecha"
            app:layout_constraintBottom_toTopOf="@+id/input2_numero" android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/input2_numero" app:layout_constraintStart_toStartOf="@+id/input2_editorial"
            app:layout_constraintEnd_toEndOf="@+id/input2_editorial" app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginBottom="28dp"/>
    <Button
            android:text="elim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toStartOf="@+id/button2" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.255"/>
    <Button
            android:text="act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>