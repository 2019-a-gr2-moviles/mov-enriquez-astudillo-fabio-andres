<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearAutores">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            tools:layout_editor_absoluteX="99dp" android:id="@+id/input_nombre" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            tools:layout_editor_absoluteY="200dp"
            android:id="@+id/input_apellido"
            app:layout_constraintStart_toStartOf="@+id/input_nombre"
            app:layout_constraintEnd_toEndOf="@+id/input_nombre" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            tools:layout_editor_absoluteY="362dp" android:id="@+id/input_fecha"
            app:layout_constraintEnd_toEndOf="@+id/input_apellido"
            app:layout_constraintStart_toStartOf="@+id/input_apellido" app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/input_ec" app:layout_constraintEnd_toEndOf="@+id/input_fecha"
            app:layout_constraintStart_toStartOf="@+id/input_fecha" app:layout_constraintHorizontal_bias="0.495"
            tools:layout_editor_absoluteY="498dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_autor" app:layout_constraintEnd_toEndOf="@+id/input_ec"
            app:layout_constraintStart_toStartOf="@+id/input_ec" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>